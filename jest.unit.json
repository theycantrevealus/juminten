{
  "slowTestThreshold": 300,
  "modulePaths": ["<rootDir>"],
  "moduleDirectories": ["node_modules"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "roots": ["<rootDir>/apps/"],
  "testEnvironment": "node",
  "testRegex": ".*\\.unit.spec\\.ts$",
  "moduleNameMapper": {
    "^@repository(.*)$": "<rootDir>/libs/infrastructure/database$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/dist/"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/apps/**/*.service.{js,jsx,ts,tsx}",
    "!<rootDir>/node_modules/",
    "!<rootDir>/**/*.mock.{js,jsx,ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    ".(e2e|unit)-spec.(t|j)s",
    ".controller.(t|j)s",
    "assessment.form.service.(t|j)s",
    ".dto.(t|j)s",
    ".provider.(t|j)s",
    ".batch.(t|j)s",
    ".join.(t|j)s",
    ".module.(t|j)s",
    ".mock.(t|j)s",
    ".stub.(t|j)s",
    "main.(t|j)s"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 90,
      "statements": 90
    }
  },
  "coverageDirectory": "./coverage"
}
