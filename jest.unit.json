{
  "slowTestThreshold": 300,
  "modulePaths": ["<rootDir>"],
  "moduleDirectories": ["node_modules"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "roots": ["<rootDir>/apps/"],
  "testEnvironment": "node",
  "testRegex": ".*\\.unit.spec\\.ts$",
  "moduleNameMapper": {
    "^@configuration(.*)$": "<rootDir>/apps/configuration$1",
    "^@decorator(.*)$": "<rootDir>/apps/decorator$1",
    "^@guard(.*)$": "<rootDir>/apps/guard$1",
    "^@integration(.*)$": "<rootDir>/apps/integration$1",
    "^@database(.*)$": "<rootDir>/apps/libs/infrastructure/database$1",
    "^@interceptor(.*)$": "<rootDir>/apps/interceptor$1",
    "^@util(.*)$": "<rootDir>/apps/util$1",
    "^@shared(.*)$": "<rootDir>/apps/libs/shared$1",
    "^@module(.*)$": "<rootDir>/apps/libs/module$1",
    "^@filter(.*)$": "<rootDir>/apps/libs/filter$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/dist/"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/apps/**/*.service.{js,jsx,ts,tsx}",
    "!<rootDir>/node_modules/",
    "!<rootDir>/**/*.mock.{js,jsx,ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    ".(e2e|unit)-spec.(t|j)s",
    ".controller.(t|j)s",
    "assessment.form.service.(t|j)s",
    ".dto.(t|j)s",
    ".provider.(t|j)s",
    ".batch.(t|j)s",
    ".join.(t|j)s",
    ".module.(t|j)s",
    ".mock.(t|j)s",
    ".stub.(t|j)s",
    "main.(t|j)s"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 10,
      "statements": 10
    }
  },
  "coverageDirectory": "./coverage"
}
