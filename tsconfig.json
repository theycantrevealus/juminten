{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noEmit": false,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "noLib": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@repository/*": ["./libs/infrastructure/database/*"]
    }
  },
  "include": ["./apps/**/*.ts", "./libs/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
