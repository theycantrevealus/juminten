{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noEmit": false,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "noLib": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@configuration/*": ["./apps/configuration/*"],
      "@repository/*": ["./libs/infrastructure/database/*"],
      "@shared/*": ["./libs/shared/*"],
      "@module/*": ["./libs/module/*"],
      "@filter/*": ["./apps/filter/*"]
    }
  },
  "include": ["./apps/**/*.ts", "./libs/**/*.ts", "./k6/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
