{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noEmit": false,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "noLib": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@configuration/*": ["./apps/configuration/*"],
      "@decorator/*": ["./apps/decorator/*"],
      "@guard/*": ["./apps/guard/*"],
      "@e2e/*": ["./apps/e2e/*"],
      "@database/*": ["./libs/infrastructure/database/*"],
      "@interceptor/*": ["./apps/interceptor/*"],
      "@util/*": ["./apps/util/*"],
      "@shared/*": ["./libs/shared/*"],
      "@module/*": ["./libs/module/*"],
      "@filter/*": ["./apps/filter/*"]
    },
    "baseUrl": "./"
  },
  "include": ["./apps/**/*.ts", "./libs/**/*.ts", "./k6/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
