{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "dist",
    "scenario",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": ["apps/**/*.ts", "libs/**/*.ts", "test/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "rootDir": "apps"
  }
}
